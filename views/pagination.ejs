<ul class="pagination">

    <% var i = 1 %>
        <% var pageCount = getPageCount() %>
            <% var cssClass %>

                <% while (i <= pageCount) { %>
                    <% cssClass = (page == i) ? 'class="active"' : ''  %>
                        <%- '<li ' + cssClass + '><a href="/page/' + i + '"> ' + i + '</a></li>' %>
                            <% i++ %>
                                <% } %>
</ul>
